<UserControl
    x:Class="TraoDoiDo.VoucherUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TraoDoiDo"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="Auto"
    Height="Auto"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d"
    Margin="5,5,0,0"
    >
    <Border
        BorderBrush="White"
        BorderThickness="5"
        CornerRadius="15">
        <materialDesign:Card
            Width="375"
            Height="150"
            Background="#F6F6F8"
            BorderBrush="White"
            BorderThickness="5"
            UniformCornerRadius="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Background="#FFF2573E">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,10,0,0"
                        Padding="10,0,10,0"
                        FontSize="25"
                        Foreground="White"
                        Text="Voucher" />
                    <materialDesign:PackIcon
                        Grid.Row="1"
                        Width="75"
                        Height="75"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Kind="ShoppingOutline" />

                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="46" />
                        <RowDefinition />
                        <RowDefinition Height="45" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <TextBlock
                            x:Name="txtbTenVoucher"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            FontWeight="Medium"
                            Text="Giảm 20.000 tiền sản phẩm "
                            TextWrapping="Wrap" />
                    </Grid>

                    <StackPanel
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            x:Name="txtbGiaTri"
                            FontSize="45"
                            FontWeight="Medium"
                            Text="20000" />
                        <TextBlock
                            FontSize="45"
                            FontWeight="Medium"
                            Text=" đ" />
                    </StackPanel>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="70" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            Grid.Column="0"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center">
                            <TextBlock
                                FontSize="12"
                                Text="Số lượt sử dụng còn lại: 5 lượt"
                                TextWrapping="Wrap" />
                            <TextBlock
                                FontSize="12"
                                Text="Ngày kết thúc: 14/5/2024"
                                TextWrapping="Wrap" />
                        </StackPanel>
                        <Grid Grid.Column="1">
                            <Button
                                Margin="0,0,5,0"
                                materialDesign:ButtonAssist.CornerRadius="10"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource MaterialDesignRaisedButton}">
                                <TextBlock Text="Dùng" />
                            </Button>
                        </Grid>
                    </Grid>

                </Grid>

            </Grid>

        </materialDesign:Card>
    </Border>



</UserControl>
