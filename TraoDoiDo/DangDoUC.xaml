                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Click="btnSuaDo_Click" Content="Sửa" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>

