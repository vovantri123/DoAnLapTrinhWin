                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Click="btnXoa_Click" Content="Xóa" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </ScrollViewer>
                        </Grid>

