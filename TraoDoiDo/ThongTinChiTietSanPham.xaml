<Window
    x:Class="TraoDoiDo.ThongTinChiTietSanPham"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TraoDoiDo"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ThongTinChiTietSanPham"
    Width="900"
    Height="650"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border
                Margin="12,10,5,0"
                Background="LightGray"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="5">
                <Grid Grid.Column="0" Height="400">
                    <Image x:Name="imgAnhSP" Source="/HinhCuaToi/lenovo.png" />
                    <Button
                        x:Name="btnAnhTruoc"
                        Width="80"
                        Height="80"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="btnAnhTruoc_Click">
                        <Button.Clip>
                            <RectangleGeometry
                                RadiusX="50"
                                RadiusY="50"
                                Rect="0,0,80,80" />
                        </Button.Clip>
                        <materialDesign:PackIcon
                            Width="50"
                            Height="50"
                            Foreground="Black"
                            Kind="ChevronLeftCircleOutline"
                            Opacity="0.7" />
                    </Button>
                    <Button
                        x:Name="btnAnhSau"
                        Width="80"
                        Height="80"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="btnAnhSau_Click">
                        <Button.Clip>
                            <RectangleGeometry
                                RadiusX="50"
                                RadiusY="50"
                                Rect="0,0,80,80" />
                        </Button.Clip>
                        <materialDesign:PackIcon
                            Width="50"
                            Height="50"
                            Foreground="Black"
                            Kind="ChevronRightCircleOutline"
                            Opacity="0.7" />
                    </Button>

                </Grid>

            </Border>


            <materialDesign:Card
                Grid.Column="1"
                Margin="6,10,12,0"
                UniformCornerRadius="5">
                <materialDesign:Card.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="320"
                        Opacity="0.08"
                        ShadowDepth="2"
                        Color="Black" />
                </materialDesign:Card.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <TextBlock
                            Margin="10,10,10,5"
                            FontSize="32"
                            Text="Ipad Gen 6 32Gb 4G+ Wifi Zin " />
                        <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
                            <TextBlock
                                Margin="10,0,5,0"
                                VerticalAlignment="Center"
                                FontSize="15"
                                Foreground="#FF673AB7">
                                <Underline>4.8</Underline>
                            </TextBlock>
                            <materialDesign:RatingBar
                                x:Name="ReadOnlyRatingBar"
                                IsReadOnly="True"
                                Value="4.8" />
                            <TextBlock
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="|" />
                            <TextBlock
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="22"
                                Text="Đã bán 512" />
                        </StackPanel>
                        <StackPanel Margin="10,3,10,3" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                VerticalAlignment="Bottom"
                                FontSize="17"
                                Text="9.990.000đ"
                                TextDecorations="Strikethrough" />
                            <TextBlock
                                FontSize="25"
                                Foreground="#FF673AB7"
                                Text="4.990.000 đ" />
                            <TextBlock
                                Margin="10,0,0,0"
                                Padding="3"
                                VerticalAlignment="Center"
                                Background="#FF673AB7"
                                FontSize="15"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Giảm 50%" />
                        </StackPanel>

                        <Grid
                            Width="Auto"
                            Margin="10,0,10,2"
                            HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="55" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="25"
                                Text="Số lượng" />
                            <Button
                                Grid.Column="1"
                                Width="40"
                                Height="30"
                                Background="White"
                                BorderBrush="Black">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="30"
                                    Foreground="Black"
                                    Text="-" />
                            </Button>

                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                FontSize="29"
                                Text="5" />
                            <Button
                                Grid.Column="3"
                                Width="40"
                                Height="30"
                                Background="White"
                                BorderBrush="Black">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="17"
                                    Foreground="Black"
                                    Text="+" />
                            </Button>
                            <TextBlock
                                Grid.Column="4"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="25"
                                Text="15 sản phẩm" />
                        </Grid>


                    </StackPanel>
                    <Button
                        x:Name="btnThemVaoGioHang"
                        Grid.Row="1"
                        Width="250"
                        Height="52"
                        Margin="2,20,2,18"
                        materialDesign:ButtonAssist.CornerRadius="4"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        Click="btnThemVaoGioHang_Click"
                        Content="Thêm vào giỏ hàng"
                        FontSize="25" />

                    <StackPanel Grid.Row="2">
                        <Grid Margin="10,10,10,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="25"
                                Text="Tình trạng" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="Đã qua sử dụng" />

                        </Grid>
                        <Grid Margin="10,0,10,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="25"
                                Text="Phí vận chuyển" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="20.000đ" />

                        </Grid>

                        <Grid Margin="10,0,10,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="25"
                                Text="Loại" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="Thiết bị di động" />

                        </Grid>

                    </StackPanel>

                </Grid>
            </materialDesign:Card>

        </Grid>
        <Grid Grid.Row="1">
            <TextBox
                Height="160"
                Margin="10,10,10,0"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Mô tả"
                AcceptsReturn="True"
                FontSize="20"
                Foreground="Black"
                IsReadOnly="True"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                Text="Hình thức: Mặt trước và màn hình không có xước. Mặt sau có vài vết nhỏ do sử dụng hàng ngày nhưng không ảnh hưởng đến chức năng. Góc cạnh có những dấu vết nhỏ. Pin: Còn tốt, đảm bảo hoạt động lâu dài. Hoạt động: Mọi chức năng đều hoạt động hoàn hảo, không có lỗi phần mềm hay phần cứng."
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
        </Grid>

    </Grid>


