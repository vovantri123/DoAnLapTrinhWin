<Window
    x:Class="TraoDoiDo.DanhGia"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TraoDoiDo"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DanhGia"
    Width="650"
    Height="490"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Image Source="HinhCuaToi/Avatar1.png">
                <Image.OpacityMask>
                    <VisualBrush Stretch="Uniform">
                        <VisualBrush.Visual>
                            <Ellipse
                                Width="50"
                                Height="50"
                                Margin="10,10,10,0"
                                Fill="White" />
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Image.OpacityMask>
            </Image>
        </Grid>

        <Grid Grid.Row="1">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="35"
                FontWeight="Bold"
                Text="Nguyễn Hoàng Anh Khoa" />
        </Grid>

        <Grid Grid.Row="2">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="30"
                Text="Đánh giá sản phẩm này " />
        </Grid>

        <Grid Grid.Row="3">
            <StackPanel>

                <materialDesign:RatingBar
                    x:Name="BasicRatingBarWithPreview"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsPreviewValueEnabled="True"
                    Value="0">
                    <materialDesign:RatingBar.ValueItemTemplate>
                        <DataTemplate DataType="system:Int32">
                            <Grid>
                                <materialDesign:PackIcon
                                    Width="85"
                                    Height="85"
                                    Kind="Star" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="8"
                                    Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                                    Text="{Binding}" />
                            </Grid>
                        </DataTemplate>
                    </materialDesign:RatingBar.ValueItemTemplate>
                </materialDesign:RatingBar>
                <Button
                    Width="100"
                    Height="60"
                    Margin="0,10,0,0" Click="Button_Click">

                    <materialDesign:PackIcon
                        x:Name="btnGuiDanhGia"
                        Width="50"
                        Height="40"
                        Kind="Send" />
                </Button>
            </StackPanel>

        </Grid>
        <Grid Grid.Row="4" />
    </Grid>
</Window>
